<resources>
    <declare-styleable name="CameraView">
        <attr name="feature_modes">
            <!-- default mode -->
            <flag name="capture" value="0" />
            <flag name="barcode" value="1" />
            <!-- Please think in bits for your next value -->
        </attr>
        <attr name="capture_mode" format="enum">
            <!-- default mode -->
            <enum name="screenshot" value="0" />
            <enum name="lens" value="1" />
            <!-- {@deprecated Use feature_mode instead.} -->
            <enum name="barcode" value="2" />
        </attr>
        <attr name="focus_mode" format="enum">
            <!-- default mode -->
            <enum name="automatic" value="0" />
            <enum name="manual" value="1" />
        </attr>
        <attr name="quality" format="integer" />
        <attr name="compression_format" format="enum">
            <!-- default -->
            <enum name="webp" value="0" />
            <enum name="jpeg" value="1" />
        </attr>
        <attr name="barcode_format" format="enum">
            <!-- default format -->
            <enum name="all" value="0" />
            <enum name="code_128" value="1" />
            <enum name="code_39" value="2" />
            <enum name="code_93" value="3" />
            <enum name="codabar" value="4" />
            <enum name="ean_8" value="5" />
            <enum name="ean_13" value="6" />
            <enum name="itf" value="7" />
            <enum name="upc_a" value="8" />
            <enum name="upc_e" value="9" />
            <enum name="qr_code" value="10" />
            <enum name="pdf417" value="11" />
            <enum name="aztec" value="12" />
            <enum name="data_matrix" value="13" />
        </attr>
    </declare-styleable>
</resources>